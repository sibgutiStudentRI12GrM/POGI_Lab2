<Window x:Class="lab2_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="125" Width="300">
    <Grid>
        <Label Content="Year:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Month:" HorizontalAlignment="Left" Margin="85,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Date:" HorizontalAlignment="Left" Margin="206,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="yearsComboBox" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="70" SelectionChanged="yearsComboBox_SelectionChanged"/>
        <ComboBox x:Name="monthsComboBox" HorizontalAlignment="Left" Margin="85,41,0,0" VerticalAlignment="Top" Width="116" SelectionChanged="monthsComboBox_SelectionChanged"/>
        <ComboBox x:Name="datesComboBox" HorizontalAlignment="Left" Margin="206,41,0,0" VerticalAlignment="Top" Width="70" SelectionChanged="datesComboBox_SelectionChanged"/>

    </Grid>
</Window>
