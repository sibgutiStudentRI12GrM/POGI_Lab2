<Window x:Class="lab2_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="600">
    <Grid>
        <ListBox x:Name="timeStampsListBox" Margin="10,10,215,10"/>
        <Button x:Name="startTimerBtn" Content="Start" HorizontalAlignment="Right" Margin="0,0,10,140" Width="200" Height="60" VerticalAlignment="Bottom" Click="startTimerBtn_Click"/>
        <Button x:Name="keepTimerBtn" Content="Keep" HorizontalAlignment="Right" Margin="0,0,10,75" Width="200" Height="60" VerticalAlignment="Bottom" Click="keepTimerBtn_Click"/>
        <Button x:Name="stopTimerBtn" Content="Stop" HorizontalAlignment="Right" Margin="0,0,10,10" Width="200" Height="60" VerticalAlignment="Bottom" Click="stopTimerBtn_Click"/>
        <Label x:Name="timerLabel" Content="00:00:00" HorizontalAlignment="Right" Margin="0,0,32,205" VerticalAlignment="Bottom" Height="60" Width="178" FontSize="35"/>
        <CheckBox x:Name="isFulltimeCheckBox" Content="" HorizontalAlignment="Right" Margin="0,0,10,228" VerticalAlignment="Bottom" Width="17" IsChecked="True" Click="isFulltimeCheckBox_Click"/>




    </Grid>
</Window>
